<h1>Add a New Trail:</h1>


<form action="/trails" method="POST">
   <input type="text" name="name" required="true" placeholder="Name">

   <input type="text" name="location" required="true" placeholder="Location">

  <input type="text" name="date" required="true" placeholder="Date">
<br></br>
  <input type="float" name="distance" placeholder="Distance(miles)">
  <br></br>
  <input type="text" name="notes" required="true" placeholder="Notes">

   <br></br>
  <input type="submit" id="submit" value="Submit">

</form>
